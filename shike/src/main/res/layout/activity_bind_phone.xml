<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <View
        style="@style/ListDivider"
        android:layout_marginTop="@dimen/dimen16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen48"

        android:background="@android:color/white"
        android:gravity="center_vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen16"
            android:background="@null"
            android:drawableLeft="@drawable/ic_tab_bar_home"
            android:drawablePadding="@dimen/dimen10"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:textSize="@dimen/text_size_14sp" />
    </LinearLayout>

    <View style="@style/ListDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen48"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen16"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@drawable/ic_tab_bar_home"
            android:drawablePadding="@dimen/dimen10"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:id="@+id/tvGetCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen16"
            android:background="@drawable/transparent_press_bkg"
            android:text="点击获取验证码"
            android:textAppearance="@style/TextAppearance.Larger.Orange" />
    </LinearLayout>

    <View style="@style/ListDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen48"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen16"
            android:background="@null"
            android:drawableLeft="@drawable/ic_tab_bar_home"
            android:drawablePadding="@dimen/dimen10"
            android:hint="请输入邀请码(非必填)"
            android:inputType="textPassword"
            android:textSize="@dimen/text_size_14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnReg"
        style="@style/ButtonMain"
        android:layout_width="match_parent"
        android:text="注册" />


</LinearLayout>
