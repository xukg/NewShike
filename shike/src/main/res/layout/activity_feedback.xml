<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen10"
        android:background="@drawable/grey_border"
        android:orientation="vertical">


    <EditText
        android:id="@+id/etContent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen160"
        android:layout_marginTop="@dimen/dimen10"
        android:background="@null"
        android:gravity="top"
        android:hint="请输入产品意见"
        android:padding="@dimen/dimen5"
        android:textAppearance="@style/TextAppearance.Large.Black" />

    <TextView
        android:id="@+id/ivInputLimit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/dimen10"
        android:paddingBottom="@dimen/dimen10"
        android:paddingRight="@dimen/dimen16"
        android:gravity="right"
        android:text="还可输入200字符" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white"
        android:layout_marginBottom="@dimen/dimen10"
        android:padding="@dimen/dimen16">

        <ImageView
            android:id="@+id/ivInsertImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/image_add"
            android:padding="5dp"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ivInsertImage"
            android:text="反馈附图" />

    </RelativeLayout>


    <Button
        android:id="@+id/btnOk"
        style="@style/ButtonMain"
        android:layout_width="match_parent"
        android:text="提交" />

</LinearLayout>
